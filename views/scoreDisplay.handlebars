{{!-- This is where high scores will be displayed. --}}
{{!-- If they click on a user on the chart, they should be directed and view that user's profile (userfile.handlebars)
--}}

<div id="home">
  <div class="container">
    <h1>Top Scores...</h1>
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-header">
            <h3>Top 10 Highest Scores:</h3>
          </div>
          <div class="card-body" id="highDisplayDiv">
            <ul id="top-list" class="list-group">
              {{#each users}}
              <li data-id="{{this.id}}" class="list-group-item">
                <a href="/user/{{this.id}}">{{this.name}}</a>
                
              </li>
              {{/each}}
            </ul>
          </div>
        </div>
      </div>
    </div>

    <br>

    <div class="row">
      <div class="col-6">
        <div class="card">
          <div class="card-header">
            <h3>Top 10 Highest Scores of Cat Person:</h3>
          </div>
          <div class="card-body" id="highDisplayDiv">
            <ul id="top-list-cat" class="list-group">
              {{#each users}}
                {{@catDog}}: {{this}}
              {{/each}}
              
              
              {{#each users}}
                {{#if isCat}}
                <li data-id="{{this.id}}" class="list-group-item">
                  <a href="/user/{{this.id}}">{{this.name}}</a>
                </li>
                {{/if}}
              {{/each}}
            </ul>
          </div>
        </div>
      </div>

      <div class="col-6">
        <div class="card">
          <div class="card-header">
            <h3>Top 10 Highest Scores of Dog Person:</h3>
          </div>
          <div class="card-body" id="highDisplayDiv">
            <ul id="top-list-dog" class="list-group">
              {{#each users}}
              <li data-id="{{this.id}}" class="list-group-item">
                <a href="example/{{this.id}}">{{this.text}}</a>
                <button class="btn btn-danger float-right delete">ï½˜</button>
              </li>
              {{/each}}
            </ul>
          </div>
        </div>
      </div>      
    </div>

  </div>
</div>

