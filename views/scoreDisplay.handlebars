{{!-- This is where high scores will be displayed. --}}
{{!-- If they click on a user on the chart, they should be directed and view that user's profile (userfile.handlebars)
--}}

<div id="home">
  <div id="newContainer">
    <h1>Top Scores...</h1>
    <div class="row">
      <div class="col-4">
        <div class="card" id="highDisplayDiv">
          <div class="card-header" id="highDisplayDiv-Header">
            <h4 class="scoreTitle"><i class="fas fa-star"></i>Top 10 Highest Scores<i class="fas fa-star"></i></h4>
          </div>
          <div class="card-body">
            <ul id="top-list" class="list-group">
              {{#each users}}
              <li data-id="{{this.id}}" class="list-group-item">
                <span><img src={{this.pictureurl}} width="50px" height="50px" id="scoreDisplayPic"></p></span>
                <span><strong>User Name: </strong><a href="/user/{{this.id}}">{{this.name}}</a></span>
                <span id="scoreDisplay"><strong>Score: </strong><span
                    id="scoreDisplayscore">{{this.currenthighscore}}</span></span>
              </li>
              {{/each}}
            </ul>
          </div>
        </div>
      </div>

      <div class="col-4">
        <div class="card" id="highDisplayDiv">
          <div class="card-header" id="highDisplayDiv-Header">
            <h4 class="scoreTitle"><i class="fas fa-cat"></i>Top 10 of Cat Lovers<i class="fas fa-cat"></i></h4>
          </div>
          <div class="card-body">
            <ul id="top-list-cat" class="list-group">
              {{#each catUsers}}
              <li data-id="{{this.id}}" class="list-group-item">
                <span><img src={{this.pictureurl}} width="50px" height="50px" id="scoreDisplayPic"></p></span>
                <span><strong>User Name: </strong><a href="/user/{{this.id}}">{{this.name}}</a></span>
                <span id="scoreDisplay"><strong>Score: </strong><span
                    id="scoreDisplayscore">{{this.currenthighscore}}</span></span>
              </li>
              {{/each}}
            </ul>
          </div>
        </div>
      </div>

      <div class="col-4">
        <div class="card" id="highDisplayDiv">
          <div class="card-header" id="highDisplayDiv-Header">
            <h4 class="scoreTitle"><i class="fas fa-dog"></i>Top 10 of Dog Lovers<i class="fas fa-dog"></i></h4>
          </div>
          <div class="card-body">
            <ul id="top-list-dog" class="list-group">
              {{#each dogUsers}}
              <li data-id="{{this.id}}" class="list-group-item">
                <span><img src={{this.pictureurl}} width="50px" height="50px" id="scoreDisplayPic"></p></span>
                <span><strong>User Name: </strong><a href="/user/{{this.id}}">{{this.name}}</a></span>
                <span id="scoreDisplay"><strong>Score: </strong><span
                    id="scoreDisplayscore">{{this.currenthighscore}}</span></span>
              </li>
              {{/each}}
            </ul>
          </div>
        </div>
      </div>

    </div>

    <br>
    <a href="/" id="backtoScoreLink">‚Üê Back To Game</a>
    <p class="scoreLabel"> Your Current Score: <span id="score"></span></p>
  </div>
</div>

<script>
  $("#score").text(localStorage.getItem("currentScore"))
</script>