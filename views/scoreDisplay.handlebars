{{!-- This is where high scores will be displayed. --}}
{{!-- If they click on a user on the chart, they should be directed and view that user's profile (userfile.handlebars)
--}}

<div id="home">
  <div class="container">
    <h1>Top Scores...</h1>
    <a href="/" id="backtoScoreLink">‚Üê Back To Game</a>
    <div class="row">
      <div class="col-12">
        <div class="card"  id="highDisplayDiv">
          <div class="card-header">
            <h3>Top 10 Highest Scores:</h3>
          </div>
          <div class="card-body">
            <ul id="top-list" class="list-group">
              {{#each users}}
              <li data-id="{{this.id}}" class="list-group-item">
                <span><img src={{this.pictureurl}} width="50px" height="50px" id="scoreDisplayPic"></p></span>
                <span><strong>User Name:     </strong><a href="/user/{{this.id}}">{{this.name}}</a></span> 
                <span id="scoreDisplay"><strong>Score:     </strong><span id="scoreDisplayscore">{{this.currenthighscore}}</span></span>
              </li>
              {{/each}}
            </ul>
          </div>
        </div>
      </div>
    </div>

    <br>

    <div class="row">
      <div class="col-6">
        <div class="card">
          <div class="card-header">
            <h3>Top 10 Highest Scores of Cat Person:</h3>
          </div>
          <div class="card-body">
            <ul id="top-list-cat" class="list-group">
              {{#each catUsers}}
            
              <li data-id="{{this.id}}" class="list-group-item">
                <span><img src={{this.pictureurl}} width="50px" height="50px" id="scoreDisplayPic"></p></span>
                <span><strong>User Name:     </strong><a href="/user/{{this.id}}">{{this.name}}</a></span> 
                <span id="scoreDisplay"><strong>Score:     </strong><span id="scoreDisplayscore">{{this.currenthighscore}}</span></span>
              </li>
              {{/each}}
            </ul>
          </div>
        </div>
      </div>

      <div class="col-6">
        <div class="card">
          <div class="card-header">
            <h3>Top 10 Highest Scores of Dog Person:</h3>
          </div>
          <div class="card-body" >
            <ul id="top-list-dog" class="list-group">
              {{#each dogUsers}}
              <li data-id="{{this.id}}" class="list-group-item">
                <span><img src={{this.pictureurl}} width="50px" height="50px" id="scoreDisplayPic"></p></span>
                <span><strong>User Name:     </strong><a href="/user/{{this.id}}">{{this.name}}</a></span> 
                <span id="scoreDisplay"><strong>Score:     </strong><span id="scoreDisplayscore">{{this.currenthighscore}}</span></span>
              </li>
              {{/each}}
            </ul>
          </div>
        </div>
      </div>      
    </div>
  </div>
</div>
